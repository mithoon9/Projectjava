<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/vaccination"/>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@drawable/bug"
        />

    <TextView

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/cover" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Hepatitis-B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Stock"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/cover" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_bio"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="180dp"
            android:padding="20dp"

            android:text="VACCINE FOR YOU CHILD"


            android:textSize="15dp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/txt_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age Between 2 to 4 months"
            android:id="@+id/age"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/as"
            android:text="Vaccines
1.hepB-DTPa-Hib-IPV
2.13vPCV
3.rotavirus"
            />

        ////

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/as"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age Between 4 to 6 months"
            android:id="@+id/age1"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/age1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaccines
1.hepB-DTPa-Hib-IPV
2.13vPCV
3.rotavirus
3.rotavirus"
            android:id="@+id/bs"
            />

        //

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/bs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age Between 6 to 8 months"
            android:id="@+id/age2"/>

        <TextView
            android:layout_margin="5dp"
            android:layout_below="@+id/age2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="
Vaccines
1.hepB-DTPa-Hib-IPV
2.13vPCV
3.rotavirus
4.Hib
5.MenACWY-tetanus toxoid"
            />



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
